<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head%>
    <title><%= title %></title>
  </head>
  <body>
    <header>
      <% include ./partials/navbar%>
    </header>
    <h1 class='center'>My snowboards</h1>
    <hr />
    <div class='col s12 m4'>
       <h3>Add a Snowboard</h3>
       <form action='/snowboards' method='post'>
         <input type='text' name='title' placeholder='Title' />
         <button class='btn btn-waves' type='submit'>Add</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>x</th>
       </thead>
       <tbody>
         <% snowboards.forEach( function(snowboard) { %>
           <tr>
             <td><%= snowboard.title %></td>
         <% }); %>
       </tbody>
     </table>
   </body>
</html>
